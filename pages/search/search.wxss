/* pages/search/search.wxss */
.header {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
}

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}

.header .search {
  flex: 1;
  color: #000;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #eee;
}
.header .search .icon {
  float: left;
  margin: 1rpx 5rpx 0 0;
}
.header button.yellow {
  color: #fff;
  background-color: rgb(250, 214, 9);
  margin-left: 20rpx;
  font-size: 30rpx;
}
.header input {
  height: 30rpx;
}

.result {
  padding: 0;
}
.result .shop {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #efefef;
}
.result .shop image {
  width: 100%;
  height: 266rpx;
}



