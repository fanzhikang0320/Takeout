/* pages/index/index.wxss */
.container {
  background-color: #efefef;
}
/* ------------------搜索区域样式---------------------- */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  padding: 20rpx;
  z-index: 1;
  box-sizing: border-box;
  transition: background 0.5s ease-in-out;
}
.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}
.header .location {
  color: #fff;
  font-size: 30rpx;
  line-height: 40rpx;
  background-color: rgba(212, 208, 208, 0.418);
  border-radius: 30rpx;
  padding: 10rpx 20rpx 10rpx 10rpx;
  vertical-align: middle;
}
.header .search {
  flex: 1;
  background-color: #fff;
  border-radius: 30rpx;
  color: #888;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
}
.header.scrolled {
  background-color: rgba(248, 244, 9, 0.884);
}
/* -------------滚动样式，菜单区域样式----------------------- */
.swiper image {
  width: 100%;
}

.swiper-item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.menu {
  display: flex;
  flex-direction: column;
}

.menu image {
  width: 100rpx;
  height: 100rpx;
}
.menu-swiper {
  background-color: white;
}
/* -------------特色频道、附近商家、为你优选区域样式----------------------------------- */
.section {
  margin: 20rpx 0 5rpx 0;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.section image {
  width: 95%;

}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
  line-height: 70rpx;
}
.section-title::before {
  content: '';
  position: absolute;
  left: 50%;
  margin-top: 37rpx;
  margin-left: -180rpx;
  width: 100rpx;
  height: 1rpx;
  background-color: #000;
}
.section-title::after {
  content: '';
  position: absolute;
  left: 50%;
  margin-top: 37rpx;
  margin-left: 80rpx;
  width: 100rpx;
  height: 1rpx;
  background-color: #000;
}
.filters {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.filter {
  flex: 1;
  text-align: center;
  border-top: 1rpx solid #ddd;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 10rpx;
}
.v {
  display: none;
}
.active {
  font-weight: bold;
}
.active .v {
  display: inline-block;
}
/*------------------------附近商家数据展示区域样式----------------------- */
.fujin-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img-shops {
  width: 100%;
  height: 400rpx;
}
.fujin-list navigator {
  width: 100%;
}





